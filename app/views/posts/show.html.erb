<p class="notice"> <%= notive %> </p>

<p>
    <b>Name: </b>
    <%= @post.name %>
</p>

<p>
    <b>Title:</b>
    <%= @post.title %>
</p>

<p>
    <b>Content:</b>
    <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
 <p>
    <b>Commenter:</b>
    <%= comment.body %>
</p>

<p>
    <b>Comment:</b>
    <%= comment.body %>
</p>
<% end %>


<h2>Add a comment: </h2>
<%= from_for([@post, @post.comments.build]) do |f| %>
   <div class = "field" >
    <%= f.label :commenter %> <br />
    <%= f.text_field :commenter %>
    </div>
    <div class = "field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    </div>

    <div class = "actions">
        <%= f.submit %>
    </div>

<% end %>

<br />

<%= link_to 'edit post', edit_post_path(@post) %> |
<%= link_to 'back to posts', posts_path %>|
